<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.authCycle.auth.Edit_Restaurant_Profile_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/Lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Restaurant_Edit_Profile_Fragment_Civ_ProfilePicture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_12sdp"
                android:scaleType="centerCrop"
                tools:ignore="VectorDrawableCompat" />


            <EditText
                android:id="@+id/Restaurant_Edit_Profile_Fragment_Et_Name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/grey_background"
                android:drawableStart="@drawable/ic_user_regular_black"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/restaurant_name"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/Restaurant_Edit_Profile_Fragment_Et_Email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/grey_background"
                android:drawableStart="@drawable/ic_envelope_square_solid_black"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/email"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight"
                android:textSize="@dimen/_12ssp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/grey_background">

                <ImageView
                    android:id="@+id/Image_Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/ic_home_solid_black"
                    tools:ignore="VectorDrawableCompat" />

                <Spinner
                    android:id="@+id/Restaurant_Edit_Profile_Fragment_Sp_City"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/Image_Home">

                </Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/grey_background">

                <ImageView
                    android:id="@+id/Image_Home2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/ic_home_solid_black"
                    tools:ignore="VectorDrawableCompat" />

                <Spinner
                    android:id="@+id/Restaurant_Edit_Profile_Fragment_Sp_Region"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/Image_Home2">

                </Spinner>
            </RelativeLayout>

            <EditText
                android:id="@+id/Restaurant_Edit_Profile_Fragment_Et_Delivery_Time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/grey_background"
                android:drawableStart="@drawable/ic_clock_black"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/delivery_time"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight"
                android:textSize="@dimen/_12ssp" />


            <EditText
                android:id="@+id/Restaurant_Edit_Profile_Fragment_Et_Low_Order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/grey_background"
                android:drawableStart="@drawable/ic_money_black"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/minimumOrder"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/Restaurant_Edit_Profile_Fragment_Et_Delivery_Cost"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/grey_background"
                android:drawableStart="@drawable/ic_money_black"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/delieveryCost"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:text="@string/state"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp" />

                <Switch
                    android:id="@+id/Restaurant_Edit_Profile_Fragment_Switch_State"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:theme="@style/SwitchThemeOverlay" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/communication_details"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Restaurant_Edit_Profile_Fragment_Et_Phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/grey_background"
                android:drawableStart="@drawable/ic_phone_solid_black"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/phone"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/Restaurant_Edit_Profile_Fragment_Et_Whats"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/grey_background"
                android:drawableStart="@drawable/ic_whatsapp_black"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/whatsapp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight"
                android:textSize="@dimen/_12ssp" />

            <Button
                android:id="@+id/Restaurant_Edit_Profile_Fragment_Btn_Adjust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_70sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/button_backgrond_red_redius"
                android:gravity="center"
                android:text="@string/adjust"
                android:textColor="@color/grey"
                android:textSize="@dimen/_15ssp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>