<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.client.buy_food.Cart_Items_Fragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/Cart_Items_Fragment_Rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/Cart_Items_Fragment_ll_container"/>

    <LinearLayout
        android:id="@+id/Cart_Items_Fragment_ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/total_cost"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/Cart_Items_Fragment_Tv_TotlCost"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/shap_circle"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Cart_Items_Fragment_Btn_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_weight="1"
                android:background="@drawable/button_backgrond_red_redius"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/Cart_Items_Fragment_Btn_AddMore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_weight="1"
                android:background="@drawable/button_backgrond_red_redius"
                android:gravity="center"
                android:text="@string/add_more"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>