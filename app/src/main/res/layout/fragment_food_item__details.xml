<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.client.buy_food.Food_Item_Details_Fragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    >

                    <ImageView
                        android:id="@+id/Food_Item_Details_Fragment_Iv_ProductPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/Food_Item_Details_Fragment_Tv_Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/purple"
                                android:textSize="@dimen/_15ssp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/Food_Item_Details_Fragment_Tv_Description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/purple"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/Iv_Coins"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginStart="@dimen/_12sdp"
                                    app:srcCompat="@drawable/ic_coins_solid"
                                    android:layout_gravity="center"/>

                                <TextView
                                    android:id="@+id/Food_Item_Details_Fragment_Tv_Price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:textColor="@color/purple"
                                    android:textSize="@dimen/_15ssp"
                                    android:layout_gravity="center"/>

                                <TextView
                                    android:id="@+id/fragment_client_restaurant_menu_item_tv_rial"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/purple"
                                    android:text="@string/client_restaurant_menu_item_tv_client_name"
                                    android:textSize="@dimen/_15ssp"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:layout_gravity="center" />

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/Food_Item_Details_Fragment_Tv_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/fragment_login_ll_register"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/Food_Item_Details_Fragment_Tv_Special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/purple"
                android:textSize="@dimen/_15ssp"
                android:text="@string/fragment_food_item_tv_special_request"
                android:layout_marginEnd="@dimen/_15sdp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                >

                <EditText
                    android:id="@+id/Food_Item_Details_Fragment_Et_Special"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:gravity="start"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"
                    android:lines="5"
                    android:paddingBottom="@dimen/_5sdp"
                    android:background="@null"
                    android:textColor="@color/purple"
                    android:textColorHint="@color/purple"
                    android:hint="@string/fragment_food_item_et_request" />

            </android.support.v7.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/fragment_login_ll_register"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp">

            <TextView
                android:id="@+id/Tv_Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="@string/quantity"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/purple"
                android:layout_gravity="center"/>

            <RelativeLayout
                android:id="@+id/Food_Item_Details_Fragment_Btn_Increase"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/layer_add_remove_bg_pink"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_plus_icon_purple"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/layer_add_remove_bg_gray"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp">

                <TextView
                    android:id="@+id/Food_Item_Details_Fragment_tV_Quantity_Show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_15sdp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Food_Item_Details_Fragment_Btn_Decrease"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/layer_add_remove_bg_pink"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_minus_icon"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </LinearLayout>

            <RelativeLayout
                android:id="@+id/Food_Item_Details_Fragment_Iv_Add"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/shape_button_circle_pink"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                style="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    app:srcCompat="@drawable/ic_cart_icon_white"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>