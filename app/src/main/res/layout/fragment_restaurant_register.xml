<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth"
    android:orientation="vertical"
    tools:context=".ui.fragments.authCycle.auth.RestaurantRegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginbackground"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/Lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/gallery_photo"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp">

                    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                        android:id="@+id/Restaurant_Complete_Register_Iv_ProductPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/white_background_2"
                        android:scaleType="centerCrop"
                        app:siShape="@drawable/shape_rounded_all_rectangle"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/Restaurant_Complete_Register_Iv_ChoosePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/white_background_2"
                        android:padding="@dimen/_18sdp"
                        app:srcCompat="@drawable/ic_plus_solid" />

                </RelativeLayout>

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Restaurant_Register_Fragment_TIE_Name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:backgroundTint="@color/greylight"
                    android:drawableStart="@drawable/ic_user_regular"
                    android:drawablePadding="@dimen/_4sdp"
                    android:hint="@string/restaurant_name"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="UnusedAttribute" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Restaurant_Register_Fragment_TIE_Email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:backgroundTint="@color/greylight"
                    android:drawableStart="@drawable/ic_envelope_square_solid"
                    android:drawablePadding="@dimen/_4sdp"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="UnusedAttribute" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Restaurant_Register_Fragment_TIE_Delivery_Time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:backgroundTint="@color/greylight"
                    android:drawableStart="@drawable/ic_clock_white"
                    android:drawablePadding="@dimen/_4sdp"
                    android:hint="@string/delivery_time"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="UnusedAttribute" />


                <LinearLayout
                    android:id="@+id/Restaurant_Register_Fragment_Ll_City"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"
                        app:srcCompat="@drawable/ic_home_solid"
                        tools:ignore="NestedWeights" />

                    <Spinner
                        android:id="@+id/Restaurant_Register_Fragment_Sp_City"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@color/greylight" />

                <LinearLayout
                    android:id="@+id/Restaurant_Register_Fragment_Ll_Region"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"
                        app:srcCompat="@drawable/ic_home_solid"
                        tools:ignore="NestedWeights" />

                    <Spinner
                        android:id="@+id/Restaurant_Register_Fragment_Sp_Region"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Spinner>


                </LinearLayout>


                <ImageView
                    android:id="@+id/Restaurant_Register_Fragment_View"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@color/greylight"
                    android:visibility="gone" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Restaurant_Register_Fragment_TIE_Password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:backgroundTint="@color/greylight"
                    android:drawableStart="@drawable/ic_lock_solid"
                    android:drawablePadding="@dimen/_4sdp"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="UnusedAttribute" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Restaurant_Register_Fragment_TIE_PasswordConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:backgroundTint="@color/greylight"
                    android:drawableStart="@drawable/ic_lock_solid"
                    android:drawablePadding="@dimen/_4sdp"
                    android:hint="@string/password_confirm"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="UnusedAttribute" />


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Restaurant_Register_Fragment_TIE_MinimumOrder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:backgroundTint="@color/greylight"
                    android:drawableStart="@drawable/ic_money_bill_wave_alt_solid"
                    android:drawablePadding="@dimen/_4sdp"
                    android:hint="@string/minimumOrder"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:lines="1"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="UnusedAttribute" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Restaurant_Register_Fragment_TIE_DelieveryCost"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:backgroundTint="@color/greylight"
                    android:drawableStart="@drawable/ic_money_bill_wave_alt_solid"
                    android:drawablePadding="@dimen/_4sdp"
                    android:hint="@string/delieveryCost"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:lines="1"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/communication_details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Restaurant_Register_Fragment_TIE_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:backgroundTint="@color/greylight"
                    android:drawableStart="@drawable/ic_phone_solid"
                    android:drawablePadding="@dimen/_4sdp"
                    android:hint="@string/phone"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="11"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="UnusedAttribute" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Restaurant_Register_Fragment_TIE_WhatsApp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:backgroundTint="@color/greylight"
                    android:drawableStart="@drawable/ic_whatsapp_brands"
                    android:drawablePadding="@dimen/_4sdp"
                    android:hint="@string/whatsapp"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="11"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="UnusedAttribute" />


                <RelativeLayout
                    android:id="@+id/Restaurant_Complete_Register_Fragment_Rl_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_48sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_48sdp"
                    android:layout_marginBottom="@dimen/_18sdp"
                    android:background="@drawable/button_backgrond_red_redius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            app:srcCompat="@drawable/ic_sign_in_alt_solid" />

                        <TextView
                            android:id="@+id/Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>