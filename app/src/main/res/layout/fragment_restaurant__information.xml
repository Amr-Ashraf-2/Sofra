<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/_20sdp"
    android:paddingEnd="@dimen/_20sdp"
    android:paddingTop="@dimen/_10sdp"
    tools:context=".ui.fragments.client.restaurantDetails.Restaurant_Information_Fragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/state"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/item_custom_restaurant_item_tv_price"/>

                <TextView
                    android:id="@+id/Restaurant_Information_Fragment_Tv_State"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="open"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/item_custom_restaurant_item_tv_price"
                    android:textSize="@dimen/_15ssp"
                    />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/Restaurant_Information_Fragment_Switch"
                    style="@style/SCBSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/fragment_login_ll_register" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/city"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/item_custom_restaurant_item_tv_price"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/Restaurant_Information_Fragment_Tv_City"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="left"
                    android:text="المنصورة"
                    android:textColor="@color/item_custom_restaurant_item_tv_price"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/fragment_login_ll_register" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/region"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/item_custom_restaurant_item_tv_price"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/Restaurant_Information_Fragment_Tv_Region"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:text="حي الجامعه1"
                    android:textColor="@color/item_custom_restaurant_item_tv_price"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/fragment_login_ll_register" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/minimum"
                    android:textColor="@color/item_custom_restaurant_item_tv_price"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/Restaurant_Information_Fragment_Tv_Minimum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="20 Rial"
                    android:textColor="@color/item_custom_restaurant_item_tv_price"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/fragment_login_ll_register" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/delivery_cost"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/item_custom_restaurant_item_tv_price"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/Restaurant_Information_Fragment_Tv_Del_Cost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="50 Rial"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/item_custom_restaurant_item_tv_price"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/fragment_login_ll_register" />

</LinearLayout>