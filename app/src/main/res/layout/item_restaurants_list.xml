<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer__display_restaurants_bg"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_minus50sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_toEndOf="@+id/Item_Restaurants_List_Iv_Photo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/item_custom_restaurants_rl_container"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_20sdp">

            <TextView
                android:id="@+id/Item_Restaurants_List_Tv_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/dark_pink"
                android:textSize="@dimen/_15ssp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_toStartOf="@+id/Item_Restaurants_List_Iv_State"
                android:layout_alignParentStart="true"
                tools:ignore="RtlCompat"
                />

            <ImageView
                android:id="@+id/Item_Restaurants_List_Iv_State"
                android:layout_width="@dimen/_9sdp"
                android:layout_height="@dimen/_9sdp"
                android:layout_toStartOf="@+id/Item_Restaurants_List_Tv_State"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp"
                />

            <TextView
                android:id="@+id/Item_Restaurants_List_Tv_State"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fragment_forgot_password_et_hint"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Item_Restaurants_List_Rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/relatt"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <RatingBar
            android:id="@+id/item_restaurants_list_Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_custom_restaurants_rl_container"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_alignParentStart="true"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="5"
            android:progressBackgroundTint="@color/grey"
            android:progressTint="@color/dark_pink"
            android:layout_marginBottom="@dimen/_4sdp"
            tools:ignore="UnusedAttribute"
            />

        <TextView
            android:id="@+id/Item_Restaurants_List_Tv_Minimum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_restaurants_list_Rating"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/fragment_forgot_password_et_hint"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/_8sdp"
            />

        <TextView
            android:id="@+id/Item_Restaurants_List_Tv_Delivery_Cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_alignParentStart="true"
            android:textColor="@color/fragment_forgot_password_et_hint"
            android:textSize="@dimen/_10ssp"
            android:layout_below="@+id/Item_Restaurants_List_Tv_Minimum"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/_8sdp"
            />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Item_Restaurants_List_Iv_Photo"
        android:layout_width="@dimen/_95sdp"
        android:layout_height="@dimen/_95sdp"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_centerVertical="true"/>

</RelativeLayout>



