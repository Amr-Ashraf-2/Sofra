<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="@dimen/_12sdp"
    android:background="@drawable/foodlist_item_background">

    <TextView
        android:id="@+id/Dialog_Tv_Dialog_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:gravity="center"
        android:padding="@dimen/_4sdp"
        android:textColor="@color/blue_black"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/Dialog_Tv_Dialog_Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp">

        <LinearLayout
            android:id="@+id/Dialog_Ll_Dialog_Ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_70sdp"
            android:background="@drawable/shap_circle">

            <ImageView
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:padding="@dimen/_4sdp"
                app:srcCompat="@drawable/ic_check" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Dialog_Ll_Dialog_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_70sdp"
            android:background="@drawable/shap_circle">

            <ImageView
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:padding="@dimen/_4sdp"
                app:srcCompat="@drawable/ic_close_black_24dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>