<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/cairo</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/red</item>

        <item name="colorSwitchThumbNormal">@color/green</item>

        <item name="android:colorForeground">@color/whitelight</item>
    </style>
    <style name="SwitchThemeOverlay" parent="">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#00c853</item>

        <!-- inactive thumb color -->
        <item name="android:colorForeground">@color/red</item>

    </style>

    <style name="disable_caps" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="general_img_v_user_rl">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="general_et_home">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textColorHint">@color/purple</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_2sdp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
    </style>

    <!--    general_Image_view(Spinner Arrow)     -->
    <style name="general_sp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start|bottom</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:background">@null</item>
        <item name="android:popupBackground">@color/spinner_bg</item>
    </style>

    <style name="activity_splash_btn">
        <item name="android:layout_width">@dimen/_150sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/shape_button_rounded_pink</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
